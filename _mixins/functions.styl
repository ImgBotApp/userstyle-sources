sorted($list, $key = null, $cmp = null)
  // Defaults for key function and key comparing function
  if $key == null
    $key = @($item) {
      $item
    }

  if $cmp == null
    $cmp = @($a, $b) {
      $a > $b
    }

  $compare = @($a, $b) {
    $cmp($key($a), $key($b))
  }

  // bubble sort
  for $i in 1..length(list) - 1
    for $j in 0..$i - 1
      if $compare(list[$j], list[$i])
        $temp = list[$i]
        list[$i] = list[$j]
        list[$j] = $temp

  return list

