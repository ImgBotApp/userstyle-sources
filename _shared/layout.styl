
// @require './positions'

// ----------------------------------------------------------------------------

layout()
  display flex

  justify-content space-between

  > *
    order 0
    flex-grow 0
    flex-shrink

    flex-basis auto
    width: auto
    max-width: 100%

    float: none


layout-row()
  flex-direction row

layout-column()
  flex-direction column


layout-no-wrap()
  flex-wrap no-wrap

layout-wrap()
  flex-wrap wrap

  justify-content flex-start
  align-items stretch
  align-content flex-start


layout-margin($margin = 0.5em)
  margin $margin

  > *
    margin ($margin / 2)

layout-padding($padding = 0.5em)
  padding $padding

  > *
    padding ($padding / 2)


layout-item-first()
  order -1

layout-item-last()
  order 1


flex-fixed()
  flex-grow 0
  flex-shrink 0

flex-noshrink()
  flex-shrink 0

flex-auto()
  flex-grow 1
  flex-shrink 1
  flex-basis auto

flex($val)
  $fixed-size-units = px pt em rem
  $percentage-units = '' '%'

  if $val is a 'unit'
    $unit = unit($val)

    flex-fixed()

    if $unit in $fixed-size-units
      flex-basis $val

    else if $unit in $percentage-units
      flex-basis percentage($val / 100)


// ----------------------------------------------------------------------------

flex-sidebar-layout($side = left, $width = 20%, $margin = 2em)
  layout()
  layout-row()

  & > *
    flex-grow 1

  if $side is left
    & > :first-child
      flex-fixed()
      width $width
      margin-right $margin

  else
    & > :last-child
      flex-fixed()
      width $width
      margin-left $margin


flex-column-layout($margin = 1em)
  layout()
  layout-margin $margin

  & > *
    flex-grow()


flex-list-layout($item-width)
  layout()
  layout-wrap()
  layout-margin()

  & > *
    flex-fixed()
    flex $item-width
