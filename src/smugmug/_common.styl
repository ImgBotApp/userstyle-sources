$brand-white                  = rgb(251, 251, 242)
$brand-primary                = rgb(181, 255, 233)
$brand-text                   = rgb(58, 51, 53)
$brand-muted                  = rgb(60, 55, 68)
$brand-pink                   = rgb(239, 81, 123)

$breakpoint                   = 670px

// ----------------------------------------------------------------------------

shadow-text($color, $shadow-color)
  color $color
  text-shadow 1px 2px $shadow-color

// ----------------------------------------------------------------------------

desktop()
  @media screen and (min-width: ($breakpoint + 1px))
    {block}

mobile()
  @media screen and (max-width: $breakpoint)
    {block}

// ----------------------------------------------------------------------------

@keyframes fadein
  0%
    opacity 0
  100%
    opacity 1

fade-in($duration)
  animation fadein cubic-bezier(0.25, 0.46, 0.45, 0.94) $duration
  animation-iteration-count 1
  animation-fill-mode forwards
  transform-origin 50% 50%

