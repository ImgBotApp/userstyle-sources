$brand-white                  = rgb(251, 251, 242)
$brand-primary                = rgb(181, 255, 233)
$brand-text                   = rgb(58, 51, 53)
$brand-muted                  = rgb(60, 55, 68)
$brand-pink                   = rgb(239, 81, 123)


// ----------------------------------------------------------------------------

row-context($row-id, $widget-id = null)
  if $widget-id
    .sm-page-layout-row[data-layout-row = {$row-id}]
      +widget-context($widget-id)
        {block}
  else
    .sm-page-layout-row[data-layout-row = {$row-id}]
      {block}


// ----------------------------------------------------------------------------

widget-context($widget-id)
  $widget-prefix = 'sm-page-widget'
  $full-widget-prefix = $widget-prefix + '-' + $widget-id

  .sm-page-layout-region.sm-page-layout-region-center
    .{$widget-prefix}.{$full-widget-prefix}
      +prefix-classes($full-widget-prefix + '-')
        {block}

// ----------------------------------------------------------------------------

shadow-text($colour, $shadow-colour)
  color $colour
  text-shadow 1px 2px $shadow-colour


// ----------------------------------------------------------------------------

stroke($colour, $stroke-colour, $stroke-width = 0.2em)
  if $colour is a color
    -webkit-text-fill-color $colour

  unless $stroke-colour is a color
    $stroke-colour = invert($colour)

  -webkit-text-stroke $stroke-width $stroke-colour


