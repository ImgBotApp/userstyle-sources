@import "./_common"


$image = 'https://photos.smugmug.com/All-Folders/Wedding-/i-bZsmPQ3/0/X3/Lianne%20%281%20of%201%29-X3.jpg'

$title-size               = 5rem
$subtitle-size            = 2rem
$quote-size               = 2.25rem

$title-colour             = #f2f3f4
$subtitle-colour          = $title-colour // rgba($title-colour, 75%)
$quote-colour             = $title-colour

$fade-in-colour-duration = 0.5s
$fade-out-colour-duration = 2s


// ------------------------------------------------------------

figure.main-image
  position relative
  overflow hidden
  cursor pointer

  // To offset margin on .sm-page-widget .sm-page-widget-content
  margin -12px

  .image
    display block
    position relative

    height 100vh

    background url($image) no-repeat center center scroll
    background-size cover
    // background-position 50% 60%

    backface-visibility hidden

  figcaption
    font-family 'Oleo Script Swash Caps', cursive
    text-align left
    backface-visibility hidden

    // &:before
    // &:after
    //   pointer-events none

    // &, & > a
    absolute: top left
    width 100%
    height 100%

    // & > a
    //   z-index 999
    //   text-indent 200%
    //   white-space nowrap
    //   font-size 0
    //   opacity 0

    h1, p
      margin 0
      line-height 1.1em

    .title
      absolute: top 50% left 18%
      text-align center

      h1, p
        color $title-colour

      h1
        font-size $title-size
        font-weight 400
        padding-bottom 1rem

      p
        font-family Lato, sans-serif
        font-size $subtitle-size

    .vogue
      absolute: top 80% left 0 right 0
      font-size $quote-size
      text-align center

      p
        color $quote-colour
        font-size 1em

        &.quote-source
          font-size 0.8em

  +mobile()
    .image
      background-position 70% 50%
      height 82vh

    figcaption
      .title
        top 50%
        left 0
        right 40%

        h1
          font-size ($title-size / 2)
          padding-bottom 0.5rem

        p
          font-size 0.9rem

      .vogue
        top 85%
        font-size 1rem

  +tablet()
    .image
      background-position 64% 50%

    figcaption
      .title
        left 0
        right 30%

      .vogue
        font-size ($quote-size * 2 / 3)

  +respond-at(md)
    figcaption
      .title
        left 4%

  +desktop()
    .image
      filter grayscale(100%)
      transition filter $fade-out-colour-duration ease-out

    &:hover
      .image
        filter grayscale(0%)
        transition filter $fade-in-colour-duration ease-in

