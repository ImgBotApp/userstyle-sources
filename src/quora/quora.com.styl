@import url(https://fonts.googleapis.com/css?family=Merriweather\+Sans:400,400italic,700,700italic);

// ----------------------------------------------------------------------------

body
  standard-type-settings()

body,
.ContentHeader,
.feed_type_answer .TruncatedAnswer,
.AnswerListItem .TruncatedAnswer,
.feed_type_answer .ExpandedAnswer,
.AnswerListItem .ExpandedAnswer
  color black !important
  font 12pt/1.44em 'Merriweather Sans', sans-serif !important

a,
.SiteHeader a:visited
  color #05e !important

a:visited
  color #c50 !important

.submit_button
.primary_button
.PrizeChooseWinnerButton
  color white !important

.threaded_comments
  .more_button
    color inherit !important

  .comment_replies_show_child_link
    color #999 !important

// ----------------------------------------------------------------------------

.ContentWrapper
  width 80vw

  .grid_page
    margin 0
    display flex
    flex-flow row nowrap
    justify-content space-between
    align-items stretch

    .layout_3col_right
      display none

    .layout_3col_left
    .layout_3col_center
    .layout_3col_right
      float none
      clear none
      width auto
      margin 0 10px

    .layout_3col_left
      flex 0 0 200px

      .NavList
        width auto

    .layout_3col_center
      flex 1 1 auto

    .layout_3col_right
      flex 0 0 228px


