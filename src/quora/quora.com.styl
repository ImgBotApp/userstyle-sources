.layout_3col_center
  width 60vw

.feed_desktop_modal_skinny_off .modal_overlay.feed_desktop_modal
  .modal_wrapper
    width 80vw

    .modal_content
      width calc(80vw - 172px)

  .modal_fixed_close
    margin-left calc(40vw + 10px)


// ----------------------------------------------------------------------------

// $answer-text-size = 17px
// $comment-text-size = 15px
// $action-text-size = 14px

$answer-text-size = 18px
$comment-text-size = 16px
$action-text-size = 14px


.modal_overlay.feed_desktop_modal .modal_wrapper
  .EventHeader
    &
    & a
      font-size $action-text-size

  .ExpandedAnswer
    font-size $answer-text-size


.CredibilitySection
.CredibilityFacts
.ActionBar
.ContentFooter
  font-size $action-text-size


.threaded_comments
  font-size $comment-text-size

  .comment_list .comment_wrapper .comment_highlight_wrapper
    .comment_contents .full_comment_text
      .TruncatedAnswerComment
      .ExpandedAnswerComment
      .full_text
      .rendered_qtext
      .inline_editor_value
      .inline_editor_edit
        font-size inherit

      .comment_author_name
        .user
        .anon_user
        .IdentityNameCredential
          font-size inherit

    .comment_delete_link_wrapper a
      transform scale3d(1.25, 1.25, 1)

  .comment_replies_show_child_link
    .light
    .user
    .IdentityNameCredential
      font-size inherit

  .reply_to_comment
  .add_root_comment
  .threaded_inline_editor
    .editor_wrapper .Comment.Editor
      font-size inherit


.AnswerPageViewMoreLink
.multifeed_header .modal_related_answers .view_more
  .view_more_link
    font-size $comment-text-size

